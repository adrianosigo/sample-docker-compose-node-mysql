<%-include('partials/header.ejs') %>
<body>
    <%-include('partials/navbar.ejs') %>
    
    <div class="container">
        <br>  
        <div class="card">
            <div class="card-header">
                <h3>Pergunta</h3>
            </div>
            <div class="card-body">
                <label><%= pergunta.titulo %></label>
                <h1></h1>
                <label><%= pergunta.descricao %></label>
                <hr>
                <% if (typeof respostas !== 'undefined') { %>
                <h3>Respostas</h3>
                    <% respostas.forEach(function(resp, index){ %> 
                        <h4><%# index+1 %>
                            <%= resp.createdAt.toLocaleDateString('pt-BR', { day: '2-digit', month: 'long', year: 'numeric'}); %> - 
                            <%= resp.createdAt.toLocaleTimeString('pt-BR', { hour: 'numeric', minute:'numeric'}); %></h4>
                        <p><%= resp.descricao; %></p>
                        <hr>
                    <% }) %>
                <% } %>
                <form method="POST" action="/salvarresposta">
                    <h3>Responda</h3>
                    <label>Responder:</label>
                    <textarea name="resposta" placeholder="Digite sua Resposta" class="form-control"></textarea>
                    <br>
                    <textarea hidden name="perguntaID"><%= pergunta.id %></textarea>
                    <button class="btn btn-success">Responder</button>
                </form>
                <br>
            </div>
        </div>
    </div>
</body>
<%-include('partials/footer.ejs') %>
